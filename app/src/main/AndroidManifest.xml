<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.made.calvintd.moviecatalogue">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name=".widgetprovider.FavoriteMoviesWidgetProvider"
            android:label="@string/favorite_movies_widget_id">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_movies_widget_info" />
        </receiver>
        <receiver android:name=".widgetprovider.FavoriteTVShowsWidgetProvider"
            android:label="@string/favorite_tv_shows_widget_id">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_tv_shows_widget_info" />
        </receiver>
        <receiver
            android:name=".alarmreceiver.DailyReminderReceiver"
            android:directBootAware="true"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".alarmreceiver.NewestReminderReceiver"
            android:directBootAware="true"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activity.FavoriteActivity"
            android:theme="@style/AppThemeNAB" />
        <activity android:name=".activity.TvShowDetailsActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppThemeNAB">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MovieDetailsActivity" />

        <service
            android:name="com.made.calvintd.moviecatalogue.widgetservice.FavoriteMoviesWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
        <service
            android:name="com.made.calvintd.moviecatalogue.widgetservice.FavoriteTvShowsWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <provider
            android:name=".contentprovider.CatalogueProvider"
            android:authorities="com.made.calvintd.moviecatalogue"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>